{
    "compilerOptions": {
        "outDir": "./esm/",
        "baseUrl": "./",
        "lib": ["ES2022", "DOM"],
        "sourceMap": true,
        "allowJs": true,
        "target": "es6",
        "module": "ES2022",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "declaration": true,
        "strict": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "jsx": "react",
        "typeRoots": [
            "node",
            "node_modules/@types",
            "../../node_modules/@types"
        ],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["./src/**/*"],
    "typeAcquisition": {
        "include": ["jest"]
    }
}
